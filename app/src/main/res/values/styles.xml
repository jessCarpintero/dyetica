<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
        <item name="android:dropDownListViewStyle">@style/mySpinnerStyle</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Toolbar" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorTitleToolbar</item>
    </style>
    <style name="ButtonApp" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorTitleToolbar</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="ButtonAppLarge" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorTitleToolbar</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">50dp</item>
    </style>
    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextLabelLarge" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="mySpinnerStyle" parent="android:Widget.ListView.DropDown">
        <item name="android:divider">@color/colorLightGrey</item>
        <item name="android:dividerHeight">1dp</item>
    </style>
</resources>
